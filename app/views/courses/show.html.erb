<div class="sm:pt-4 md:pt-8">
  <div>
    <div class="flex flex-col w-full px-20 md:flex-col lg:flex-row">
      <div class="px-8 pt-4 lg:w-1/2">
        <h2 class="pb-8 text-5xl font-bold leading-tight text-gray-900"><%= @course.name %></h2>
        <h3 class="px-4 mb-8 text-2xl font-medium leading-tight text-gray-800">O que é este curso?</h3>
        <p class="px-4 text-lg font-light leading-normal text-justify text-gray-600">
          <%= @course.html_description.html_safe %>
        </p>
        <div id="course_content">
          <p class="px-4 pt-6 text-xl font-medium">O curso contém:</p>
          <ul class="flex flex-col px-8 pt-4 lg:flex-row">
            <li class="flex items-start mb-2 leading-relaxed text-gray-800">
              <%= image_tag "video.svg", class: "text-center" %>
              <span class="px-2"><%= @course.total_lectures %> vídeos (~ <%= time_ago_in_words(::Time.now + @course.length.minutes) %> de conteúdo)</span>
            </li>
            <li class="flex items-start mb-2 leading-relaxed text-gray-800 lg:ml-12">
              <%= image_tag "code-pen.svg", class: "text-center" %>
              <span class="px-2"><%= @course.total_repositories %> Repositórios completos</span>
            </li>
          </ul>
        </div>
        <!-- Bullets points for knowledge and what we will learn -->
        <div class="flex flex-col md:flex-row lg:flex-row">
          <div id="detail_content">
            <p class="px-4 pt-6 text-base">Neste curso você vai aprender:</p>
            <ul class="flex flex-col px-8 pt-4">
              <% @course.learning_subjects.split(',').each do |subject| %>
                <li class="flex items-start mb-2 leading-relaxed text-gray-800">
                  <%= image_tag "check.svg", class: "text-center" %>
                  <span class="px-2 text-base font-light"><%= subject %></span>
                </li>
              <% end %>
            </ul>
          </div>
          <div id="knowledge_needed_content">
            <p class="px-4 pt-6 text-base">Conhecimentos Necessários:</p>
            <ul class="flex flex-col px-8 pt-4">
              <% @course.needed_knowledge.split(',').each do |knowledge| %>
                <li class="flex items-start mb-2 leading-relaxed text-gray-800">
                  <%= image_tag "check.svg", class: "text-center" %>
                  <span class="px-2 text-base font-light"><%= knowledge %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <!-- Start now Button -->
        <div class="px-4 my-6">
          <%= form_with url: start_course_path, method: :post do |form| %>
            <%= form.hidden_field :id, value: @course.id %>
            <%= button_tag type: :submit, class: "flex flex-row text-center bg-indigo-700 text-white p-4 shadow-xl rounded-lg focus:bg-indigo-800 focus:outline-none" do %>
              <div class="flex flex-row mx-auto">
                <span class="pr-2"><%= image_tag "learn.svg" %></span>
                <span class="tracking-wide font-medium">Iniciar Curso</span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="h-128 lg:w-1/2">
        <iframe width="100%" height="100%" class="border-2 border-gray-200 rounded-lg shadow-2xl" src='https://www.youtube.com/embed/DBq7E1rF1P0?rel=0&autoplay=0'
          frameborder='0' allowfullscreen>
        </iframe>
      </div>
    </div>
  </div>
</div>
